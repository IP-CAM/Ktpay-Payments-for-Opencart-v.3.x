{{ header }}
{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-free-checkout" data-toggle="tooltip" title="{{ text_button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-free-checkout" class="form-horizontal">
            <div class="form-group">
                <img src="../admin/view/image/payment/kuveytturk.svg" class="col-xs-4 col-md-2 text-center" id="payment-logo" />
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_status"> {{ admin_label_isactive }}</label>
                <div class="col-sm-10">
                    <select name="payment_ktpayment_status" class="form-control">
                        {% if payment_ktpayment_status %}
                            <option value="1" selected="selected">{{ text_open }}</option>
                            <option value="0">{{ text_closed }}</option>
                        {% else %}
                            <option value="1">{{ text_open }}</option>
                            <option value="0" selected="selected">{{ text_closed }}</option>
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_environment"> {{ admin_label_environment }}</label>
                <div class="col-sm-10">
                    <select name="payment_ktpayment_environment" class="form-control">
                        {% if payment_ktpayment_environment=='PROD' %}
                            <option value="{{ text_test }}">{{ text_test }}</option>
                            <option value="{{ text_prod }}" selected="selected">{{ text_prod }}</option>
                        {% else %}
                            <option value="{{ text_test }}" selected="selected">{{ text_test }}</option>
                            <option value="{{ text_prod }}">{{ text_prod }}</option>
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_merchantid">
                    <span data-toggle="tooltip" title="{{ admin_tooltip_merchantid }}">
                        {{ admin_label_merchantid }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <input type="text" name="payment_ktpayment_merchantid" value="{{ payment_ktpayment_merchantid }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_customerid"> 
                    <span data-toggle="tooltip" title="{{ admin_tooltip_customerid }}">
                        {{ admin_label_customerid }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <input type="text" name="payment_ktpayment_customerid" value="{{ payment_ktpayment_customerid }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_username">
                    <span data-toggle="tooltip" title="{{ admin_tooltip_username }}">
                        {{ admin_label_username }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <input type="text" name="payment_ktpayment_username" value="{{ payment_ktpayment_username }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_password">
                    <span data-toggle="tooltip" title="{{ admin_tooltip_password }}">
                        {{ admin_label_password }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <input type="text" name="payment_ktpayment_password" value="{{ payment_ktpayment_password }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_has3dsecureapprove"> {{ admin_label_hasneccessary3dapprove }}</label>
                <div class="col-sm-10">
                    <select name="payment_ktpayment_has3dsecureapprove" class="form-control">
                        {% if payment_ktpayment_has3dsecureapprove=='on' %}
                            <option value="on" selected="selected">{{ text_open }}</option>
                            <option value="off">{{ text_closed }}</option>
                        {% else %}
                            <option value="on">{{ text_open }}</option>
                            <option value="off" selected="selected">{{ text_closed }}</option>
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_over3dsecureamountment_password">
                    <span data-toggle="tooltip" title="{{ admin_tooltip_over3damount }}">
                        {{ admin_label_over3damount }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <input type="text" name="payment_ktpayment_over3dsecureamount" value="{{ payment_ktpayment_over3dsecureamount }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_ktpayment_installmentoptions">
                    <span data-toggle="tooltip" title="{{ admin_tooltip_installmentoptions }}">
                        {{ admin_label_installmentoptions }}
                    </span>
                </label>
                <div class="col-sm-10">
                    <select name="payment_ktpayment_installmentoptions" class="form-control">
                        {% if payment_ktpayment_installmentoptions=='on' %}
                            <option value="on" selected="selected">{{ text_open }}</option>
                            <option value="off">{{ text_closed }}</option>
                        {% else %}
                            <option value="on">{{ text_open }}</option>
                            <option value="off" selected="selected">{{ text_closed }}</option>
                        {% endif %}
                    </select>
                </div>
            </div>
            <div class="form-group">         
                <div class="col-sm-12">
                    {{ payment_ktpayment_rates_table }}               
                </div>
            </div>
        </form>
    </div>
</div>

{{ footer }}